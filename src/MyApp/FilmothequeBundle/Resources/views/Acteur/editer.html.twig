{% extends "::layout.html.twig" %}


{% block body %}


    <h3>Formulaire d'ajout d'acteur</h3>

    <div class="well">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'} })}}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        {# Génération du label + error + widget pour un champ. #}
        {# Génération manuelle et éclatée : #}

        <div style="padding-left: 20px">
            {{ form_row(form.image) }}
        </div>

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.nom, "Nom de l'acteur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.nom) }}
            <div class="col-sm-10">
                {# Génération de l'input. #}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.prenom, "Prénom de l'acteur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.prenom) }}
            <div class="col-sm-10">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.dateNaissance, "Date de naissance", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.dateNaissance) }}
            <div class="col-sm-10">
                {{ form_widget(form.dateNaissance) }}
            </div>

        </div>

        <div class="form-group">
            {{ form_label(form.sexe, "Sexe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.sexe) }}
            <div class="col-sm-10">
                {{ form_widget(form.sexe) }}
            </div>
        </div>

        {{ form_row(form.films) }}


        {{ form_widget(form.ajouter, { 'label': 'Ajouter' }) }}


        {# Génération automatique des champs pas encore écrits.

           Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)

           et tous les champs cachés (type « hidden »). #}

        {{ form_rest(form) }}


        {# Fermeture de la balise <form> du formulaire HTML #}

        {{ form_end(form) }}

    </div>

{% endblock %}